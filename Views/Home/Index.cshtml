@{
    ViewData["Title"] = "Home | Smith Swimming School";
}

<!-- Landing Page: Home/Index -->
<div class="container py-5">
    <!-- Welcome Section -->
    <div class="row mb-5 text-center">
        <div class="col-12">
            <h1 class="display-6 fw-bold mb-3">Welcome to Smith Swimming School (3S)</h1>
            <p class="lead text-muted mb-4">
                Your journey to becoming a confident and skilled swimmer starts here!
            </p>
            <hr class="w-50 mx-auto mb-5" />
        </div>
    </div>

    <!-- Image Row -->
    <div class="row align-items-center justify-content-center mb-5">
        <div class="col-md-6 text-center mb-4 mb-md-0">
            <img src="/images/SwimLessons.jpg" class="img-fluid rounded shadow-sm"
                 alt="Swimming Lessons" style="max-height: 350px;" />
        </div>
        <div class="col-md-6 text-center">
            <img src="/images/creative-swimming-logo.png" class="img-fluid"
                 alt="Smith Swimming School Logo" style="max-height: 380px;" />
        </div>
    </div>

    <!-- About Section -->
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h3 class="display-6 mb-3">About Us</h3>
            <p class="fs-5 text-muted">
                Over 30 years ago, <strong>Grandpa Smith</strong>, a retired swimming coach from Tiny University,
                founded our school to continue sharing his passion for swimming.
                Today, Smith Swimming School remains dedicated to helping students of all ages and skill levels
                achieve their aquatic goals. Whether you’re taking your first dive or improving your stroke,
                our certified coaches are here to guide you every step of the way.
            </p>
        </div>
    </div>
</div>

