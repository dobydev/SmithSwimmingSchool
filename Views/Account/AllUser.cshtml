@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "All Users | Smith Swimming School";
    var userRoles = ViewBag.UserRoles as Dictionary<string, List<string>> ?? new();
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-secondary text-center">No users have been assigned roles yet.</div>
}
else
{
    <h3 class="mb-3">All Users</h3>
    <table class="table table-bordered align-middle">
        <thead class="table-light">
            <tr class="text-center">
                <th>User Name</th>
                <th>Assigned Roles</th>
                <th>Role Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                var roles = (userRoles.ContainsKey(user.Id) ? userRoles[user.Id] : new List<string>());
                var hasRole = roles.Any();
                <tr>
                    <td>@user.UserName</td>
                    <td>@(hasRole ? string.Join(", ", roles) : "—")</td>
                    <td class="text-center">
                        @if (!hasRole)
                        {
                            <a asp-controller="Role" asp-action="AddUserRole" asp-route-id="@user.Id"
                               class="btn btn-outline-primary btn-sm">Add Role</a>
                        }
                        else
                        {
                            <a asp-controller="Role" asp-action="AddUserRole" asp-route-id="@user.Id"
                               class="btn btn-outline-secondary btn-sm">Change Role</a>
                            @* If you prefer to block changes entirely, use a disabled button instead:
                        <button class="btn btn-outline-secondary btn-sm" disabled title="User already has a role">Add Role</button>
                        *@
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-between">
        <p><a asp-action="Register" class="btn btn-primary mb-3">Add User</a></p>
        <a asp-controller="Admin" asp-action="Index" class="link-secondary">Back to Admin Home</a>
    </div>
}
