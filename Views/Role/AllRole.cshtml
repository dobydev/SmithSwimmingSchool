@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "All Roles | Smith Swimming School";
    var roles = Model ?? Enumerable.Empty<Microsoft.AspNetCore.Identity.IdentityRole>();
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-center mb-3">Role Management</h3>
                    <p class="text-center text-muted">
                        Manage existing roles or add new ones below.
                    </p>

                    <div class="mb-3 text-center">
                        <a asp-action="AddRole" class="btn btn-primary w-50">Add Role</a>
                    </div>

                    @if (!roles.Any())
                    {
                        <div class="alert alert-secondary text-center mb-0">
                            No roles have been assigned yet.
                        </div>
                    }
                    else
                    {
                        <table class="table table-bordered text-center align-middle mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Role Name</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var role in roles)
                                {
                                    <tr>
                                        <td>@role.Name</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }

                    <div class="text-center mt-3">
                        <a asp-controller="Admin" asp-action="Index" class="link-secondary">Back to Admin Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
