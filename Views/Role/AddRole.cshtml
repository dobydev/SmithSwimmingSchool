@model Microsoft.AspNetCore.Identity.IdentityRole

@{
    ViewData["Title"] = "Add Role | Smith Swimming School";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-center mb-3">Add a New Role</h3>
                    <p class="text-center text-muted mb-4">
                        Create a new user role for the system below.
                    </p>

                    <form asp-controller="Role" asp-action="AddRole" method="post">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Role Name</label>
                            <input asp-for="Name" class="form-control" placeholder="Enter Role Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary w-50 ">Add Role</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a asp-controller="Admin" asp-action="Index" class="link-secondary">Back to Admin Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
