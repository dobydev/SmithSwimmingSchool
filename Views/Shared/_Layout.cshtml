<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<!-- Keeps footer at bottom -->
<body class="d-flex flex-column min-vh-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom shadow-sm mb-3">
            <div class="container-fluid px-4">
                <!-- Full width to allow brand flush left -->
                <div class="d-flex w-100 justify-content-between align-items-center">
                    <!-- Brand all the way left -->
                    <a class="navbar-brand me-auto" asp-area="" asp-controller="Home" asp-action="Index">
                        Smith Swimming School (3S)
                    </a>

                    <!-- Toggler -->
                    <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>

                <!-- Nav links aligned right -->
                <div id="mainNav" class="collapse navbar-collapse justify-content-end mt-2 mt-sm-0">
                    <ul class="navbar-nav gap-3">
                        <li class="nav-item"><a class="nav-link" asp-controller="Coach" asp-action="Index">Coaches</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Swimmer" asp-action="Index">Swimmers</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="Index">Administrators</a></li>
                        <li class="nav-item">
                            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline m-0">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="nav-link border-0 bg-transparent">Logout</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow-1">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="mt-auto border-top py-3">
        <div class="container text-center">
            <small class="text-muted">&copy; @DateTime.UtcNow.Year - Smith Swimming School</small>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
